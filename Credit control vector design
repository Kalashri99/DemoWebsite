

<div class="credit-control-container">
  <div class="credit-control-semicircle">
    <div class="credit-control-needle"></div>
  </div>
  <div class="credit-control-legend">
    <div class="legend-item poor">Poor</div>
    <div class="legend-item fair">Fair</div>
    <div class="legend-item good">Good</div>
    <div class="legend-item excellent">Excellent</div>
  </div>
</div>

.credit-control-container {
  position: relative;
  width: 300px;
  height: 150px;
}

.credit-control-semicircle {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #e9e9e9;
  border-radius: 50% 50% 0 0;
  overflow: hidden;
}

.credit-control-needle {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 4px;
  height: 75%;
  background: #000;
  transform-origin: bottom center;
  transform: translateX(-50%) rotate(0deg);
}

.credit-control-legend {
  position: absolute;
  bottom: -25px;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}

.legend-item {
  width: 25%;
  text-align: center;
  padding: 2px;
}

.poor { color: red; }
.fair { color: orange; }
.good { color: green; }
.excellent { color: blue; }
function updateCreditControlScore(score) {
  var needle = document.querySelector('.credit-control-needle');
  var rotationAngle = (score / 100) * 180; // Assuming the score ranges from 0 to 100

  needle.style.transform = 'translateX(-50%) rotate(' + rotationAngle + 'deg)';
}

// Example usage:
var score = 75; // Replace with the actual credit control score
updateCreditControlScore(score);

