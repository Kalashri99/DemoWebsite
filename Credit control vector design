

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    .gauge-container {
      position: relative;
      width: 200px;
      height: 200px;
      background-color: #e9e9e9;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .gauge-meter {
      position: absolute;
      width: 90%;
      height: 90%;
      background-color: #fff;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 24px;
      font-weight: bold;
    }

    .gauge-needle {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 4px;
      height: 40%;
      background-color: #000;
      transform-origin: bottom center;
      transform: translateX(-50%) rotate(0deg);
    }
  </style>
</head>

<body>
  <div class="gauge-container">
    <div class="gauge-meter" id="gauge-meter"></div>
    <div class="gauge-needle" id="gauge-needle"></div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      function updateGauge(score) {
        var meter = $("#gauge-meter");
        var needle = $("#gauge-needle");

        meter.text(score);

        var rotationAngle = (score / 100) * 180; // Assuming the score ranges from 0 to 100
        needle.css("transform", "translateX(-50%) rotate(" + rotationAngle + "deg)");
      }

      function fetchCreditControlScore() {
        $.ajax({
          url: "/YourController/GetCreditControlScore", // Replace with the actual URL to your controller action
          method: "GET",
          dataType: "json",
          success: function(response) {
            var score = response.score;
            updateGauge(score);
          },
          error: function(xhr, status, error) {
            console.log("Error: " + error);
          }
        });
      }

      // Fetch the credit control score initially
      fetchCreditControlScore();
    });
  </script>
</body>

</html>


    
      
    
    



  
      

    
