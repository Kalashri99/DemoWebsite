<div id="gauge">
  <div id="needle"></div>
  <div class="color color-good"></div>
  <div class="color color-fair"></div>
  <div class="color color-low"></div>
</div>

#gauge {
  position: relative;
  width: 200px;
  height: 100px;
  border: 2px solid #ccc;
  border-radius: 100px 100px 0 0;
  overflow: hidden;
}

.color {
  position: absolute;
  width: 100%;
  height: 100%;
  border-bottom: 50px solid;
}

.color-good {
  border-color: #00ff00;
}

.color-fair {
  border-color: #ffff00;
}

.color-low {
  border-color: #ff0000;
}

#needle {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 2px;
  height: 50px;
  background-color: #000;
  transform-origin: bottom;
  transform: translateX(-50%) rotate(0deg);
  transition: transform 0.5s ease;
}


function setCreditScore(score) {
  var angle = (score / 100) * 180; // Calculate the angle based on the score
  
  var needle = document.getElementById("needle");
  needle.style.transform = "translateX(-50%) rotate(" + angle + "deg)";
  
  var colors = document.getElementsByClassName("color");
  for (var i = 0; i < colors.length; i++) {
    colors[i].classList.remove("active");
  }
  
  if (score >= 70) {
    colors[0].classList.add("active");
  } else if (score >= 40) {
    colors[1].classList.add("active");
  } else {
    colors[2].classList.add("active");
  }
}

// Example usage
setCreditScore(85); // Sets the credit score to 85 (good)

