
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Score Meter</title>
  <style>
    .meter-container {
      position: relative;
      width: 200px;
      height: 100px;
    }

    .semicircle {
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
      clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%, 50% 50%);
    }

    .color-good {
      background-color: #00ff00;
    }

    .color-fair {
      background-color: #ffff00;
    }

    .color-low {
      background-color: #ff0000;
    }

    .needle {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 4px;
      height: 50px;
      background-color: #000;
      transform-origin: bottom;
      transform: translate(-50%, -100%) rotate(0deg);
      transition: transform 0.5s ease;
    }
  </style>
</head>
<body>
  <div class="meter-container">
    <div class="semicircle color-low"></div>
    <div class="semicircle color-fair"></div>
    <div class="semicircle color-good"></div>
    <div class="needle" id="needle"></div>
  </div>

  <script>
    function setScore(score) {
      var angle = (score / 100) * 180 - 90;

      var needle = document.getElementById("needle");
      needle.style.transform = "translate(-50%, -100%) rotate(" + angle + "deg)";

      var semicircles = document.getElementsByClassName("semicircle");
      for (var i = 0; i < semicircles.length; i++) {
        semicircles[i].classList.remove("active");
      }

      if (score >= 70) {
        semicircles[2].classList.add("active");
      } else if (score >= 40) {
        semicircles[1].classList.add("active");
      } else {
        semicircles[0].classList.add("active");
      }
    }

    // Example usage
    setScore(85); // Sets the score to 85
  </script>
</body>
</html>


    

  
